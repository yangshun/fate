{
  "name": "@nkzw/fate-private",
  "version": "0.0.1",
  "private": true,
  "description": "Fate is a modern data client for tRPC and React.",
  "repository": {
    "type": "git",
    "url": "git://github.com/nkzw-tech/fate.git"
  },
  "author": "Christoph Nakazawa <christoph.pojer@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "pnpm run -r build",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "cd example/client && pnpm dev",
    "dev:server": "cd example/server && pnpm dev",
    "dev:setup": "(cd example/server && pnpm dev:setup)",
    "fate": "node --conditions=development --no-warnings --loader ts-node/esm --env-file example/server/.env packages/fate/src/cli.ts generate @nkzw/fate-server/src/trpc/router.ts example/client/src/lib/fate.generated.ts",
    "format": "oxfmt",
    "preinstall": "command -v git >/dev/null 2>&1 && git config core.hooksPath git-hooks || exit 0",
    "lint": "eslint --cache .",
    "lint:format": "oxfmt --check .",
    "prisma": "cd example/server && pnpm prisma",
    "test": "npm-run-all --parallel tsc:check vitest:run lint lint:format",
    "tsc": "pnpm tsgo",
    "tsc:check": "tsgo",
    "vitest:run": "vitest run"
  },
  "devDependencies": {
    "@nkzw/babel-preset-fbtee": "^1.7.1",
    "@nkzw/eslint-config": "^3.2.1",
    "@nkzw/fate-server": "workspace:*",
    "@nkzw/find-workspaces": "^1.0.0",
    "@swc/core": "^1.15.3",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "7.0.0-dev.20251125.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-workspaces": "^0.11.0",
    "glob": "^13.0.0",
    "happy-dom": "^20.0.10",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.15.0",
    "prisma": "^7.0.1",
    "prisma-json-types-generator": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsdown": "^0.16.7",
    "vite": "npm:rolldown-vite@^7.2.8",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  }
}
