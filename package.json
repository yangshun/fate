{
  "name": "@nkzw/fate-private",
  "version": "0.1.0",
  "private": true,
  "description": "fate is a modern data client for React.",
  "repository": {
    "type": "git",
    "url": "git://github.com/nkzw-tech/fate.git"
  },
  "author": "Christoph Nakazawa <christoph.pojer@gmail.com>",
  "type": "module",
  "scripts": {
    "build:docs": "typedoc && vitepress build",
    "build": "pnpm run -r build && pnpm generate-readme && pnpm copy-files",
    "dev:client": "cd example/client && pnpm dev",
    "copy-files": "find packages/* -type d -maxdepth 0 -exec cp README.md LICENSE {} \\;",
    "dev:docs": "typedoc && vitepress dev",
    "dev:server": "cd example/server && pnpm dev",
    "dev:setup": "(cd example/server && pnpm dev:setup)",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "fate:generate": "node --conditions=development --no-warnings --loader ts-node/esm --env-file example/server/.env packages/fate/src/cli.ts generate @nkzw/fate-server/src/trpc/router.ts example/client/src/fate.ts",
    "format": "oxfmt",
    "generate-readme": "node --conditions=development --no-warnings --loader ts-node/esm scripts/generate-readme.ts",
    "lint:format": "oxfmt --check .",
    "lint": "eslint --cache .",
    "preinstall": "command -v git >/dev/null 2>&1 && git config core.hooksPath git-hooks || exit 0",
    "prisma": "cd example/server && pnpm prisma",
    "ship": "pnpm build && pnpm test && pnpm publish -r --access public",
    "test": "npm-run-all --parallel tsc:check vitest:run lint lint:format",
    "tsc:check": "tsgo",
    "tsc": "pnpm tsgo",
    "vitest:run": "vitest run"
  },
  "devDependencies": {
    "@fontsource/fira-code": "^5.2.7",
    "@nkzw/eslint-config": "^3.2.1",
    "@nkzw/fate-server": "workspace:*",
    "@nkzw/find-workspaces": "^1.0.0",
    "@paper-design/shaders": "^0.0.68",
    "@swc/core": "^1.15.3",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "7.0.0-dev.20251208.1",
    "@vitest/coverage-v8": "4.0.15",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-better-tailwindcss": "^3.8.0",
    "eslint-plugin-workspaces": "^0.11.0",
    "happy-dom": "^20.0.11",
    "npm-run-all2": "^8.0.4",
    "oxc-minify": "^0.102.0",
    "oxfmt": "^0.17.0",
    "prisma": "^7.1.0",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "tsdown": "0.17.1",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-vitepress-theme": "^1.1.2",
    "vite": "8.0.0-beta.1",
    "vitepress": "2.0.0-alpha.15",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  }
}
